/* esercizio fatto da zero perch√® non riesco a caricare
 la libreria allegata al file, a causa della versione vecchia
 di processing*/

void setup() {
  size(900, 900);
  background(255);
  noStroke();
  smooth();
}

/*disegna ellissi di forme variabili, in scala di rossi.
 */
void draw() {
  if (mousePressed) {

    ellipse(mouseX, mouseY, random(10, 50), random(10, 50));
    fill(random(0, 255), 0, 0);
  }
}

